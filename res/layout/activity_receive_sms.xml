<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="20dp" >

        <View
            android:id="@+id/view_bottom_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/button_receive_sms_compose"
            android:background="@color/hs18_light_grey" />

        <Button
            android:id="@+id/button_receive_sms_compose"
            style="@style/orange_button_style"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:text="@string/compose_text" />

        <ListView
            android:id="@+id/lv_receive_sms_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" >
        </ListView>
    </RelativeLayout>

</FrameLayout>